{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "ES6",
    "target": "ES5",
    "lib": [
      "ES6",
      "ES7",
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
